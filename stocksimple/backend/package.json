{
  "name": "stocksimple-backend",
  "version": "1.0.0",
  "description": "Simple inventory management backend",
  "main": "src/server.js",
  "scripts": {
  "dev": "SSL_CERT_FILE=./ca.pem NODE_EXTRA_CA_CERTS=./ca.pem nodemon src/server.js",
  "start": "SSL_CERT_FILE=./ca.pem NODE_EXTRA_CA_CERTS=./ca.pem node src/server.js",
  "prisma:generate": "SSL_CERT_FILE=./ca.pem NODE_EXTRA_CA_CERTS=./ca.pem prisma generate",
  "prisma:push": "SSL_CERT_FILE=./ca.pem NODE_EXTRA_CA_CERTS=./ca.pem prisma db push",
  "prisma:deploy": "SSL_CERT_FILE=./ca.pem NODE_EXTRA_CA_CERTS=./ca.pem prisma migrate deploy",
  "prisma:dev": "SSL_CERT_FILE=./ca.pem NODE_EXTRA_CA_CERTS=./ca.pem prisma migrate dev"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^3.0.3",
